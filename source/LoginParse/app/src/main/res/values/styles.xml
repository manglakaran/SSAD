            <item name="android:backgroundStacked">@drawable/ab_stacked_solid_example</item>
            <item name="android:titleTextStyle">@style/MyTitle</item>
        </style>

        <style name="MyTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
            <item name="android:textColor">#545454</item>
        </style>

        <style name="MyTab" parent="android:Widget.Holo.ActionBar.TabView">
